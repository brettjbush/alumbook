<%= search_form_for @search, url: search_searchadmins_path, html: { method: :post } do |f| %>
  
    <%= f.condition_fields do |c| %>
      <%= render "condition_fields", f: c %>
    <% end %>
  
  <p>
    <%= link_to_add_fields "Add Conditions", f, :condition, class: "button" %>
  </p>
  <%= f.submit "search", :class => "button" %>
<% end %>

<% if @showResult == true %>
    <%= render 'results' %>
<% end %>
