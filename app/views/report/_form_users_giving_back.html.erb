<%= form_tag("/report/show", method:"post") do %>
  <h3>Report by Users Giving Back</h3>
  <p>Make a list of users who have given back.</p>
  <%= hidden_field_tag(:report_id, 6) %>
  <%= hidden_field_tag(:report_name, "Users Giving Back") %>
  <%= label_tag(:saved_list_type, 'Run report on: ') %>
  <%= select_tag(:saved_list_type, (options_from_collection_for_select(SavedList.where("login_id = ?", current_login.id), :id, :list_name)), {:include_blank => 'All Users'}) %>
  <%= submit_tag('Submit', :class => 'button') %>
<% end %>
