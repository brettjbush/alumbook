<div class="row">
  <div class="large-12 columns">
    <h1>Login Manager</h1>
    <%= link_to 'New Login', new_login_path, class: 'button tiny radius' %><br>
    <p>
      <!--Class pretty pulls sort icons-->
      <table class="pretty">
        <tr><!--Table header - sortable defined in application_helper.rb, allows sortable column headers-->
          <th><%= sortable  "first_name", "First Name" %></th>
          <th><%= sortable "middle_initial", "Middle Initial" %></th>
          <th><%= sortable "last_name", "Last Name" %></th>
          <th><%= sortable "type", "Type" %></th>
          <th><%= sortable "updated_at", "Last Updated" %></th>
          <th colspan="3"></th>
        </tr>
      <!--Loop through logins-->
        <% @login.each do |f| %>
          <tr>
            <td><%= f.first_name.camelize%></td>
            <td><%= f.middle_initial.upcase%></td>
            <td><%= f.last_name.camelize%></td>
            <td><%= f.type.upcase%></td>
            <td><%= f.updated_at.to_s(:date_format)%></td>
            <td><%= link_to 'Details', login_path(f), class: 'button tiny radius' %></td>
            <td><%= link_to 'Edit', edit_login_path(f), class: 'button tiny radius' %></td>
            <td><%= link_to 'Delete', f, method: :delete, data: {confirm: "Are you sure?" }, class: 'button tiny radius alert' %></td>
          </tr>
        <% end %>
      </table><br>
    </p>
  </div>
</div>
