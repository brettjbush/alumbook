
<div class="row">
  <div class="large-12 columns">
    <table>
      <tr>







<%= form_for :user_survey, url: 'create' do |form|%>
<%=form.hidden_field :survey_id, value: @survey%>
<%=form.hidden_field :date_completed, value: Date.today%>


  <% @question.each do |q|%>
  <%=fields_for :user_survey_response  do |f|%>
  <%=f.hidden_field :survey_question_id, value: q.id%>


  <br><br><%=q.text%>

  <%if q.type=="short_answer"%>
  <%= render "short", {f: f, q: q} %>
  <%end%>
  <%if q.type=="single_choice"%>
  <%= render "single", {f: f, q: q} %>
  <%end%>
  <%if q.type=="multi_choice"%>
  <%= render "multi", {f: f, q: q} %>
  <%end%>
  <%if q.type=="sub_questions"%>
  <%= render "sub", {f: f, q: q} %>
  <%end%>

  <%end%>
  <%end%>
  <%=form.submit%>
  <%end%>
